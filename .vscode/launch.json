  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "serve",
      "runtimeExecutable": "npx",
      "args": ["npx", "firebase", "serve"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "e2e",
      "cwd": "${workspaceFolder}/test/e2e",
      "args": ["run", "--verbose"],
      "program": "${workspaceFolder}/node_modules/codeceptjs/bin/codecept.js",
      "env": {
        "HEADLESS": "true",
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }    
  ]
}